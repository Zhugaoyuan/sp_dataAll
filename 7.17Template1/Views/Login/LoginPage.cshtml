<body id="bod">
    <div class="page-container">
        <h1>登录(Login)</h1>
        <input type="text" id="username" name="username" class="username" placeholder="请输入您的用户名！">
        <input type="password" id="password" name="password" class="password" placeholder="请输入您的用户密码！">
            <button type="button" onclick="window.location.href='/Login/Register'" style="width:150px;">注册</button>
            <button type="button" style="width:150px; " onclick="Logins()">登录</button>
        <div class="error"><span>+</span></div>
    </div>
